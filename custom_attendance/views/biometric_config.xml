<odoo>
	<data>

		<record id="res_config_settings_view_form" model="ir.ui.view">
		    <field name="name">res.config.settings.web.window.title</field>
		    <field name="model">res.config.settings</field>
		    <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
		    <field name="arch" type="xml">
		    	<div id="languages" position="before">
		    		<h2>TT Biometric Server</h2>

		    		<div class="row mt16 o_settings_container" name="app_biometric">

		    			<group>
		    			    <group>
		    			        <field name="biometric_server" placeholder="Eg: 127.0.0.1:1433"/>
		    			        <field name="biometric_database" placeholder="Eg: biometric_db"/>
		    			    </group>
		    			    <group>
		    			        <field name="biometric_user" placeholder="Eg: Biometric"/>
		    			        <field name="biometric_password" password="True"/>
		    			    </group>
		    			</group>

		    		</div>
		    	</div>
		    </field>
		</record>

	</data>
</odoo>