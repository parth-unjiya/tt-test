		<record id="calendar.calendar_template_meeting_changedate" model="mail.template">
		    <field name="name">Calendar: Date Updated</field>
		    <field name="model_id" ref="calendar.model_calendar_attendee"/>
		    <field name="subject">{{ object.event_id.name }}: Date updated</field>
		    <field name="email_from">{{ (object.event_id.user_id.email_formatted or user.email_formatted or '') }}</field>
		    <field name="email_to">{{ ('' if object.partner_id.email and object.partner_id.email == object.email else object.email) }}</field>
		    <field name="partner_to">{{ object.partner_id.id if object.partner_id.email and object.partner_id.email == object.email else False }}</field>
		    <field name="lang">{{ object.partner_id.lang }}</field>
		    <field name="description">Sent to all attendees if the schedule change</field>
		    <field name="body_html" type="html">
		        <div style="padding: 10px 0; background-color: #F1F1F1; color: #454748; width: 100%;">
		            <t t-set="colors" t-value="{'needsAction': 'grey', 'accepted': 'green', 'tentative': '#FFFF00', 'declined': 'red'}"/>
		            <t t-set="is_online" t-value="'appointment_type_id' in object.event_id and object.event_id.appointment_type_id"/>
		            <t t-set="customer" t-value="object.event_id.find_partner_customer()"/>
		            <t t-set="target_responsible" t-value="object.partner_id == object.event_id.partner_id"/>
		            <t t-set="target_customer" t-value="object.partner_id == customer"/>
		             <t t-set="recurrent" t-value="object.recurrence_id and not ctx.get('calendar_template_ignore_recurrence')"/>

		            <div style="max-width: 600px; margin: 30px auto; background-color: #ffffff; padding: 30px; border-radius: 8px; box-shadow: 0 0 10px rgba(0,0,0,0.05);">

		                <!-- Logo -->
		                <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
		                    <t t-set="base_url" t-value="object.get_base_url()"/>
<img t-att-src="base_url + '/custom_recruitment/static/src/img/spaceo_logo_black.png'" alt="Company Logo" style="width: 150px; height: auto;"/>
		                </div>

		                <hr/>

		                <!-- Title -->
		                <div style="text-align: center;">
		                    <h2 style="margin: 0; color: #333333;">Meeting Rescheduled: <t t-out="object.event_id.name"/></h2>
		                </div>

		                <p>
		                    Hello <t t-out="object.common_name or ''"/>,<br/><br/>
		                    <t t-if="is_online and target_responsible">
		                        <t t-if="customer">
		                            The date of your appointment with <t t-out="customer.name or ''"/> has been updated.
		                        </t>
		                        <t t-else="">
		                            Your appointment has been updated.
		                        </t>
		                        The appointment <strong t-out="object.event_id.appointment_type_id.name or ''"/> is now scheduled for
		                        <t t-out="object.event_id.get_display_time_tz(tz=object.partner_id.tz) or ''"/>.
		                    </t>
		                    <t t-elif="is_online and target_customer">
		                        The date of your appointment with <t t-out="object.event_id.user_id.partner_id.name or ''"/> has been updated.
		                        The appointment <strong t-out="object.event_id.appointment_type_id.name or ''"/> is now scheduled for
		                        <t t-out="object.event_id.get_display_time_tz(tz=object.partner_id.tz) or ''"/>.
		                    </t>
		                    <t t-else="">
		                        The date of the meeting has been updated.
		                        The meeting <strong t-out="object.event_id.name or ''"/> created by <t t-out="object.event_id.user_id.partner_id.name or ''"/> is now scheduled for
		                        <t t-out="object.event_id.get_display_time_tz(tz=object.partner_id.tz) or ''"/>.
		                    </t>
		                </p>

		                <!-- CTA Buttons -->
		                <div style="text-align: center; padding: 16px 0;">
		                    <a t-attf-href="/calendar/meeting/accept?token={{ object.access_token }}&amp;id={{ object.event_id.id }}"
		                       style="padding: 10px 20px; margin: 5px; background-color: #a4c23b; color: #ffffff; border-radius: 4px; font-weight: bold; text-decoration: none;">
		                        Accept</a>
		                    <a t-attf-href="/calendar/meeting/decline?token={{ object.access_token }}&amp;id={{ object.event_id.id }}"
		                       style="padding: 10px 20px; margin: 5px; background-color: #dc3545; color: #ffffff; border-radius: 4px; font-weight: bold; text-decoration: none;">
		                        Decline</a>
		                    <a t-attf-href="/calendar/meeting/view?token={{ object.access_token }}&amp;id={{ object.event_id.id }}"
		                       style="padding: 10px 20px; margin: 5px; background-color: #007bff; color: #ffffff; border-radius: 4px; font-weight: bold; text-decoration: none;">
		                        View</a>
		                </div>

		                <!-- Calendar Card + Event Info -->
		                <table border="0" cellpadding="0" cellspacing="0">
		                    <tr>
		                        <!-- Date Card -->
		                        <td width="130px;" style="min-width: 130px;">
		                            <div style="font-size: 12px; font-weight: bold; text-align: center; color: #fff; background-color: #a4c23b; border-radius: 4px 4px 0 0;">
		                                <t t-out="format_datetime(dt=object.event_id.start, tz=object.mail_tz if not object.event_id.allday else None, dt_format='EEEE', lang_code=object.env.lang)"/>
		                            </div>
		                            <div style="font-size: 48px; font-weight: bold; text-align: center; background-color: #F8F8F8; border: 1px solid #a4c23b;">
		                                <t t-out="format_datetime(dt=object.event_id.start, tz=object.mail_tz if not object.event_id.allday else None, dt_format='d', lang_code=object.env.lang)"/>
		                            </div>
		                            <div style="font-size: 12px; font-weight: bold; text-align: center; color: #fff; background-color: #a4c23b;">
		                                <t t-out="format_datetime(dt=object.event_id.start, tz=object.mail_tz if not object.event_id.allday else None, dt_format='MMMM y', lang_code=object.env.lang)"/>
		                            </div>
		                            <div style="font-size: 12px; font-weight: bold; text-align: center; border: 1px solid #a4c23b; border-radius: 0 0 4px 4px;">
		                                <t t-if="not object.event_id.allday">
		                                    <div>
		                                        <t t-out="format_time(time=object.event_id.start, tz=object.mail_tz, time_format='short', lang_code=object.env.lang)"/>
		                                    </div>
		                                    <t t-if="object.mail_tz">
		                                        <div style="font-size: 10px; font-weight: normal;">
		                                            (<t t-out="object.mail_tz or ''"/>)
		                                        </div>
		                                    </t>
		                                </t>
		                            </div>
		                        </td>

		                        <!-- Event Details -->
		                        <td width="20px;"></td>
		                        <td style="padding-top: 5px;">
		                            <p><strong>Details of the event</strong></p>
		                            <ul>
		                                <t t-if="object.event_id.location">
		                                    <li>
		                                        Location: <t t-out="object.event_id.location or ''"/>
		                                        (<a target="_blank" t-attf-href="http://maps.google.com/maps?oi=map&amp;q={{ object.event_id.location }}">View Map</a>)
		                                    </li>
		                                </t>
		                                <t t-if="recurrent">
		                                    <li>When: <t t-out="object.recurrence_id.get_recurrence_name()"/></li>
		                                </t>
		                                <t t-if="not object.event_id.allday and object.event_id.duration">
		                                    <li>
		                                        Duration:
		                                        <t t-set="hours" t-value="int(object.event_id.duration)"/>
		                                        <t t-set="minutes" t-value="int(round(object.event_id.duration * 60) % 60)"/>
		                                        <t t-if="hours"><t t-out="hours"/> <t t-out="'Hour' if hours == 1 else 'Hours'"/></t>
		                                        <t t-if="minutes"><t t-if="hours"> </t><t t-out="minutes"/> <t t-out="'Minute' if minutes == 1 else 'Minutes'"/></t>
		                                    </li>
		                                </t>
		                                <li>
		                                    Attendees:
		                                    <ul>
		                                        <li t-foreach="object.event_id.attendee_ids" t-as="attendee">
		                                            <div t-attf-style="display: inline-block; border-radius: 50%; width: 10px; height: 10px; background: {{ colors.get(attendee.state) or 'white' }};"></div>
		                                            <t t-if="attendee.common_name != object.common_name">
		                                                <span style="margin-left:5px;" t-out="attendee.common_name or ''"/>
		                                            </t>
		                                            <t t-else="">
		                                                <span style="margin-left:5px;">You</span>
		                                            </t>
		                                        </li>
		                                    </ul>
		                                </li>
		                                <t t-if="object.event_id.videocall_location">
		                                    <li>
		                                        How to Join:
		                                        <t t-if="object.get_base_url() in object.event_id.videocall_location">Join with Odoo Discuss</t>
		                                        <t t-else="">Join at</t><br/>
		                                        <a t-att-href="object.event_id.videocall_location" target="_blank">
		                                            <t t-out="object.event_id.videocall_location or ''"/>
		                                        </a>
		                                    </li>
		                                </t>
		                                <t t-if="not is_html_empty(object.event_id.description)">
		                                    <li>
		                                        Description of the event:<br/>
		                                        <t t-out="object.event_id.description"/>
		                                    </li>
		                                </t>
		                            </ul>
		                        </td>
		                    </tr>
		                </table>

		                <br/>
		                Thank you,
		                <t t-if="object.event_id.user_id.signature">
		                    <br/><t t-out="object.event_id.user_id.signature or ''"/>
		                </t>
		            </div>
		        </div>
		    </field>
		    <field name="auto_delete" eval="True"/>
		</record>

